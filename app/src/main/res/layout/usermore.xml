<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/business_name_register"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:hint="骑手名"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/business_phone_register"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/business_name_register"
        android:layout_marginTop="64dp"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:hint="联系电话"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/user_more_btn_return"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="114dp"
        android:background="#138c00"
        android:text="返回"
        android:onClick="user_more_btn_return"
        android:textSize="20dp" />

    <Button
        android:id="@+id/user_more_btn_finish"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp"
        android:background="#f71818"
        android:text="完成"
        android:onClick="user_more_btn_finish"
        android:textSize="20dp" />
</RelativeLayout>